package org.cuatrovientos.jv;
import java.util.Scanner;

public class NumberArray {

	public static void main(String[] args) {
		Scanner escaner = new Scanner(System.in);
		String entrada = "";
		boolean esNumero, coinciden = false;
		
		int[] arrayEnteros = new int[10];
		for (int i = 0; i < arrayEnteros.length; i++) {
			do {
				System.out.print("Entero posición " + i + ": ");
				entrada = escaner.nextLine();
				try {
					arrayEnteros[i] = Integer.parseInt(entrada);
					esNumero = true;

				} catch (NumberFormatException e) {
					esNumero = false;
				}
				if (!esNumero) {
					System.out.println("Por favor, introduce un número entero.");
				}
			} while(!esNumero);
		}
		
		for (int i = 0; i < arrayEnteros.length - 1; i++) {
			for (int j = i + 1; j < arrayEnteros.length; j++) {
				if(arrayEnteros[i] == arrayEnteros[j]){
					coinciden = true;
					break;
				}
			}
			if (coinciden) {
				break;
			}
		}
		
		if (coinciden) {
			System.out.println("Hay coincidencias.");
		}else {
			System.out.println("No hay coincidencias.");
		}
		escaner.close();
	}

}
